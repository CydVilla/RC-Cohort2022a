                <h3>My Google Map</h3>
                <script>
                  function getUserLocation() {
                    if (navigator.geolocation) {
                      navigator.geolocation.getCurrentPosition(initMap);
                    }
                  }
                  function initMap(pos) {
                    const options = {
                      zoom: 15,
                      mapId: "84e3ebcf6b9c6a44",
                      center: {
                        lat: pos.coords.latitude,
                        lng: pos.coords.longitude,
                      },
                    };
                    const map = new google.maps.Map(
                      document.getElementById("map"),
                      options
                    );
                    const marker = new google.maps.Marker({
                      position: {
                        lat: pos.coords.latitude,
                        lng: pos.coords.longitude,
                      },
                      map: map,
                      icon: {
                        url: "http://maps.google.com/mapfiles/ms/icons/green-dot.png",
                      },
                    });
                    fetch(
                      "locations?" +
                        new URLSearchParams({
                          lat: pos.coords.latitude,
                          lng: pos.coords.longitude,
                          distance: 1,
                        }),
                      {
                        method: "get",
                        headers: { "Content-Type": "application/json" },
                      }
                    )
                      .then((response) => {
                        console.log(response);
                        if (response.ok) {
                          return response.json();
                        }
                      })
                      .then((data) => {
                        console.log(data);
                        for (let j = 0; j < data.locations.length; j++) {
                          const name = data.locations[j].name;
                          const address = data.locations[j].address;
                          const lat = data.locations[j].lat;
                          const lng = data.locations[j].lng;
                          const details = data.locations[j].details;
                          const thumbUp = data.locations[j].thumbUp;
                          const thumbDown = data.locations[j].thumbDown;
                          const infowindow = new google.maps.InfoWindow();
                          const marker = new google.maps.Marker({
                            position: new google.maps.LatLng(lat, lng),
                            map: map,
                            icon: {
                              // add image url instead of binary
                              scaledSize: new window.google.maps.Size(50, 50),
                            },
                            mapTypeId: google.maps.MapTypeId.ROADMAP,
                            draggable: false,
                            title: "pin",
                            content: `<h1>${name}</h1>`,
                          });
                          google.maps.event.addListener(
                            marker,
                            "click",
                            (function () {
                              return function () {
                                infowindow.setContent(
                                  `<p>${name}</p>
                                 <p>${address}</p> 
                                 <p>${details}</p> 
                                  <button class="btn"><a href="/page/${data.locations[j].id}"><p>Comments</p></a></button>`
                                );
                                infowindow.open(map, marker);
                              };
                            })(marker)
                          );
                        }
                      });
                  }
                </script>
